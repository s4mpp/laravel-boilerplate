{
    "name": "s4mpp/laravel-boilerplate",
    "type": "project",
    "description": "The skeleton application for the Laravel 11 (modified).",
    "keywords": ["laravel", "framework"],
    "license": "MIT",
    "require": {
        "php": "^8.2",
        "laravel/framework": "^11.0",
        "laravel/pulse": "^1.4",
        "laravel/tinker": "^2.9",
        "s4mpp/admin-panel": "^3.0",
        "s4mpp/brstrings": "^1.0",
        "s4mpp/element": "^2.0",
        "s4mpp/laravel-auth-suite": "^1.0",
        "spatie/laravel-permission": "^6.4"
    },
    "require-dev": {
        "fakerphp/faker": "^1.23",
        "larastan/larastan": "^2.9",
        "laravel/pint": "^1.13",
        "laravel/sail": "^1.26",
        "laravel/telescope": "^5.0",
        "lucascudo/laravel-pt-br-localization": "^2.2",
        "plannr/laravel-fast-refresh-database": "^1.2",
        "mockery/mockery": "^1.6",
        "nunomaduro/collision": "^8.0",
        "phpunit/phpunit": "^10.5",
        "rector/rector": "^1.2",
        "s4mpp/laragenius": "^2.0",
        "spatie/laravel-ignition": "^2.4"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "repositories": [
        {
            "type": "github",
            "url": "https://github.com/s4mpp/admin-panel"
        },
        {
            "type": "github",
            "url": "https://github.com/s4mpp/laravel-auth-suite"
        },
        {
            "type": "github",
            "url": "https://github.com/s4mpp/element"
        },
        {
            "type": "github",
            "url": "https://github.com/s4mpp/laragenius"
        },
        {
            "type": "github",
            "url": "https://github.com/s4mpp/brstrings"
        }
    ],
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi",
            "@php artisan vendor:publish --tag=permission-migrations",
            "@php -r \"file_exists('database/database.sqlite') || touch('database/database.sqlite');\"",
            "@php -r \"file_exists('database/dbtest.sqlite') || touch('database/dbtest.sqlite');\"",
            "@php artisan migrate --graceful --ansi",
            "git init",
            "git add .",
            "git commit -m 'Initial commit'",
            "composer update",
            "npm install",
            "npm run build",
            "@php artisan optimize:clear",
            "@php artisan admin:update-permissions",
            "@php artisan admin:create-user",
            "@php artisan serve"
        ],
        "install-project": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\"",
            "@php -r \"file_exists('database/database.sqlite') || touch('database/database.sqlite');\"",
            "@php -r \"file_exists('database/dbtest.sqlite') || touch('database/dbtest.sqlite');\"",
            "@php artisan key:generate --ansi",
            "@php artisan migrate --quiet",
            "composer update",
            "npm install",
            "npm run build",
            "@php artisan optimize:clear",
            "@php artisan serve"
        ],
        "lint": [
            "vendor/bin/pint app",
            "vendor/bin/rector"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": [
                "laravel/telescope"
            ]
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "discard-changes" : true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
